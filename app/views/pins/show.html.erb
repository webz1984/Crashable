<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @pin.image %>
			<p>
			  <%= @pin.event_title %>
			  <%= @pin.event_date %>
			  <%= @pin.event_time %>
			  <%= @pin.event_host %>
			  <%= @pin.event_free %>
			</p>
			<p>
			  <%= @pin.user.name %>
			</p>

			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
				<%= link_to 'Back', pins_path %>
			<% end %>

			</div>
	</div>
</div>

